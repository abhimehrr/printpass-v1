<%- include('../partials/header-main') %>
<div class="container flex space-between mt-7 mb-5">
  <div style="margin: 2.5rem auto; position: relative;">
    <img src="../../static/img/values-3.png" class="form-img">
  </div>

  <div class="form-box form-box-register">
    <h1 class="title mb-1 text-center">Register</h1>
    <p class="desc">Welcome, Make a new account.</p>

    <% if(typeof msg != 'undefined'){ %>
      <p class="mb-1 text-center msg <%- msg.class %>" id="msg"><%- msg.text %></p>
    <% } %>
    
    <form action="" method="post">
      <!-- Step 1. -->
      <h4 class="mb-1" style="color: var(--primary);">Step 1. (Login)</h4>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="name">Name</label></legend>
        <input type="text" name="name" id="name" value="<%- value.name %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="email">Email</label></legend>
        <input type="email" name="email" id="email" value="<%- value.email %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="mobile">Mobile</label></legend>
        <input type="number" name="mobile" id="mobile" value="<%- value.mobile %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="password">Password</label></legend>
        <input type="password" name="password" id="password"value="<%- value.password %>">
      </fieldset>

      
      <!-- Step 2. -->
      <br>
      <h4 class="mb-1" style="color: var(--primary);">Step 2. (Branch)</h4>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="branchName">Name</label></legend>
        <input type="text" name="branchName" id="branchName" value="<%- value.branchName %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="branchAddress">Address</label></legend>
        <input type="text" name="branchAddress" id="branchAddress" value="<%- value.branchAddress %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="branchCode">Code</label></legend>
        <input type="text" name="branchCode" id="branchCode" value="<%- value.branchCode %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="ifsc">IFSC Code</label></legend>
        <input type="text" name="ifsc" id="ifsc" value="<%- value.ifsc %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="city">City / Distt.</label></legend>
        <input type="text" name="city" id="city" value="<%- value.city %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="branchEmail">Email</label></legend>
        <input type="email" name="branchEmail" id="branchEmail" value="<%- value.branchEmail %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="branchPhone">Phone</label></legend>
        <input type="number" name="branchPhone" id="branchPhone" value="<%- value.branchPhone %>">
      </fieldset>
      <fieldset class="form-group mb-1">
        <legend class="ml-1"><label for="micr">MICR Code</label></legend>
        <input type="text" name="micr" id="micr" value="<%- value.micr %>">
      </fieldset>

      <div class="mb-1 flex space-between align-center link-container">
        <a class="form-link" href="/login">Have an account?<span style="font-weight: 700;"> Login</span></a>
        <button type="submit" class="btn-local">Register</button>
      </div>
    </form>
  </div>
</div>

